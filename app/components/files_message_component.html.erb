<div class="alert alert-warning" role="alert">
  <h2><%= heading %></h2>

  <p>
    <% if download? %>
      <%= t('files_message.edit_message') %>
    <% else %>
      <%= t("files_message.#{i18n_key}.public_message") %>
    <% end %>
  </p>

  <% if display_sharable_link? %>
    <%= link_to t('files_message.link_text'), resource_path(work_version.work.uuid) %>
  <% end %>
</div>
