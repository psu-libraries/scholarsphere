<% content_for :navbar_heading do %>
  <h1 class="navbar-brand navbar-brand--center slab-font"><%= t('navbar.heading.contact_depositor') %></h1>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col">

    <%= form_for @contact_depositor_form  do |form| %>

      <div class="form-wrapper">
        <%= render 'form_fields/text', form: form, attribute: :send_to_name, required: true, readonly: true %>
        <%= render 'form_fields/text', form: form, attribute: :send_to_email, required: true, readonly: true %>
        <%= render 'form_fields/text', form: form, attribute: :subject %>
        <%= render 'form_fields/text_area', form: form, attribute: :message %>

        <%= form.submit value: 'Send', class: 'btn btn-primary btn--rounded' %>
      </div>

    <% end %>
    </div>
  </div>
</div>