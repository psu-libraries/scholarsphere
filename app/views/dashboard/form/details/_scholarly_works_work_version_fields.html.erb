<div class="form-wrapper form-wrapper--wide">
  <div class="keyline keyline--left mb-3">
    <h4><%= "Autocomplete for Open Access Works" %></h4>
  </div>
</div>
<div class="form-wrapper">
  <%= form_for @autocomplete_work_form, url: dashboard_form_autocomplete_work_forms_url do |doi_form| %>
    <%= render 'form_fields/text', form: doi_form, attribute: :doi, required: true %>
    <%= form.hidden_field :work_id, value: @resource.id %>
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  <% end %>
</div>

<%= render 'dashboard/form/details/common_work_version_required_fields', form: form %>

<div class="form-wrapper">
  <%= render 'dashboard/form/details/common_work_version_optional_fields', form: form %>
</div>
