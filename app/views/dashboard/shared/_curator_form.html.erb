<p><%= t('.explanation') %></p>

<%- curator_form_id = "edit_curator_#{dom_id curator_form.resource}" %>
<%= form_for curator_form,
             url: url,
             method: :patch,
             remote: false,
             html: { id: curator_form_id, class: 'edit-resource-curator' } do |form| %>

  <%= hidden_field_tag 'form_id', curator_form_id %>
  <%= render FormErrorMessageComponent.new(form: form) %>

  <%= render 'form_fields/text', form: form, attribute: :access_id, required: true %>

  <div class="actions mt-1 mb-3">
    <%= form.submit t('.submit_button'), class: 'btn btn-primary' %>
  </div>
<% end %>
