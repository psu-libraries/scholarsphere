<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to t('dashboard.works.index.heading'), dashboard_root_path %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= truncate @work_version.title %> (<%= @work_version.display_version_long %>)</li>
  </ol>
</nav>

<h1>
  <%= @work_version.title %>
  <%= render VisibilityBadgeComponent.new(work: @work) %>
</h1>
<h2>
  <%= @work_version.display_version_long %>
  <%= render WorkVersions::StatusBadgeComponent.new(work_version: @work_version) %>
</h2>

<div class="row">
  <div class="col-sm-7">
    <%= render WorkVersionMetadataComponent.new(work_version: @work_version) %>
    <%= render 'shared/work_version_files', work_version: @work_version %>
  </div>

  <div class="col-sm-5">
    <%= render partial: 'dashboard/works/sidebar_work', object: @work, locals: { active_version: @work_version } %>
  </div>
</div>
